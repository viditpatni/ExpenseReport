    <div class="container" style="margin-top: 50px;">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card border-0 shadow rounded-3 my-5">
                    <div class="card-body p-4 p-sm-5">
                        <h5 class="card-title text-center mb-5 fw-light fs-5">Add Your Expense</h5>
                        <form action="/expenses/api/v1/addExpense" method="post" >
                            <div class="form-group">
                                <label class="control-label " for="date">Date:</label>
                                <div class="col-sm-10">
                                  <input type="date" class="form-control mb-3" id="date" name="date" required>
                                </div>
                              </div>
                              <div class="d-flex justify-content-between">
                                <div class="form-group ">
                                  <label class="control-label" for="Medical"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="blue" class="bi bi-info-circle" viewBox="0 0 16 16"  data-toggle="popover" data-bs-trigger="hover focus" data-bs-content="Money spent on medicines, checkup etc.">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"></path>
                                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"></path>
                                      
                                  </svg > Medical Expenses(₹):</label>
                                  <div class="col-sm-10">
                                    <input type="number" class="form-control mb-3" id="Medical" name="Medical", value=0 step="0.01" required>
                                  </div>
                                </div>
                                <div class="form-group">
                                  <label class="control-label" for="Entertainment"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="blue" class="bi bi-info-circle" viewBox="0 0 16 16" data-toggle="popover" data-bs-trigger="hover focus" data-bs-content="Money spent on entertainment, outdoor trips, gadgets, ordering food etc.">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"></path>
                                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"></path>
                                    </svg> Personal Expenses(₹):</label>
                                  <div class="col-sm-10">
                                    <input type="number" class="form-control mb-3" id="Entertainment" name="Entertainment" value=0 step="0.01" required>
                                  </div>
                              </div>
                              </div>
                              <div class="d-flex justify-content-between">
                                <div class="form-group">
                                  <label class="control-label" for="Bills"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="blue" class="bi bi-info-circle" viewBox="0 0 16 16" data-toggle="popover" data-bs-trigger="hover focus" data-bs-content="Money spent on bill payments, recharges, rent, fees, EMIs etc.">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"></path>
                                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"></path>
                                    </svg> Bill Payments(₹):</label>
                                  <div class="col-sm-10">
                                    <input type="number" class="form-control mb-3" id="Bills" name="Bills" value=0 step="0.01" required>
                                  </div>
                                </div>
                                <div class="form-group">
                                  <label class="control-label" for="Groceries"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="blue" class="bi bi-info-circle" viewBox="0 0 16 16" data-toggle="popover" data-bs-trigger="hover focus" data-bs-content="Money spent on groceries and other household items.">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"></path>
                                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"></path>
                                    </svg> Household Expenses(₹):</label>
                                  <div class="col-sm-10">
                                    <input type="number" class="form-control mb-3" id="Groceries" name="Groceries" value=0 step="0.01" required>
                                  </div>
                                </div>
                              </div>
                             <div class="d-flex justify-content-between">
                              <div class="form-group">
                                <label class="control-label" for="Investment"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="blue" class="bi bi-info-circle" viewBox="0 0 16 16" data-toggle="popover" data-bs-trigger="hover focus" data-bs-content="Money spent future investments like FD, Direct stocks, mutual funds, gold etc.">
                                  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"></path>
                                  <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"></path>
                                  </svg> Investments(₹):</label>
                                <div class="col-sm-10">
                                  <input type="number" class="form-control mb-3" id="Investment" name="Investment" value=0 step="0.01" required>
                                </div>
                              </div>
                              <div class="form-group">
                                <label class="control-label" for="Gifts"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="blue" class="bi bi-info-circle" viewBox="0 0 16 16" data-toggle="popover" data-bs-trigger="hover focus" data-bs-content="Money spent on Gifts.">
                                  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"></path>
                                  <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"></path>
                                  </svg> Gift Expenses:</label>
                                <div class="col-sm-10">
                                  <input type="number" class="form-control mb-3" id="Gifts" name="Gifts" value=0 step="0.01" required>
                                </div>
                              </div>
                             </div>
                              <div class="d-flex justify-content-between">
                                <div class="form-group">
                                  <label class="control-label" for="HugeExpense"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="blue" class="bi bi-info-circle" viewBox="0 0 16 16" data-toggle="popover" data-bs-trigger="hover focus" data-bs-content="Single spent of more than 50k like on Laptop, Insurance premium etc.">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"></path>
                                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"></path>
                                    </svg> Bulk Expenses(₹):</label>
                                  <div class="col-sm-10">
                                    <input type="number" class="form-control mb-3" id="HugeExpense" name="HugeExpense" value=0 step="0.01" required>
                                  </div>
                                </div>
                                <div class="form-group">
                                  <label class="control-label" for="Miscellaneous"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="blue" class="bi bi-info-circle" viewBox="0 0 16 16" data-toggle="popover" data-bs-trigger="hover focus" data-bs-content="Expenses other than the categories mentioned.">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"></path>
                                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"></path>
                                    </svg> Miscellaneous Expenses(₹):</label>
                                  <div class="col-sm-10">
                                    <input type="number" class="form-control mb-3" id="Miscellaneous" name="Miscellaneous" value=0 step="0.01" required>
                                  </div>
                                </div>
                              </div>
                              <div class="d-flex justify-content-between">
                                <div class="form-group">
                                  <label class="control-label" for="Remarks"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="blue" class="bi bi-info-circle" viewBox="0 0 16 16" data-toggle="popover" data-bs-trigger="hover focus" data-bs-content="Brief description of your Expenses. Eg:- Mom medicines, Zomato and Wifi Recharge.">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"></path>
                                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"></path>
                                    </svg> Expense Remarks:</label>
                                  <div class="col-sm-10">
                                    <textarea class="form-control mb-3" id="Remarks" name="Remarks"> </textarea>
                                  </div>
                                </div>
                                <div class="form-group">
                                  <label class="control-label" for="Source"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="blue" class="bi bi-info-circle" viewBox="0 0 16 16" data-toggle="popover" data-bs-trigger="hover focus" data-bs-content="Mode(s) of payment like Cash, Credit card , Bank Name etc.">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"></path>
                                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"></path>
                                    </svg> Payment Sources:</label>
                                  <div class="col-sm-10">
                                    <input type="text" class="form-control mb-3" id="Source" name="Source">
                                  </div>
                                </div>
                              </div>
                              <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                  <button type="submit" class="btn btn-primary btn-login">Submit</button>
                                </div>
                              </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include("footer") -%>