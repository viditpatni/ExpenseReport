<%- include("header", {userName:userName}) -%>



    <div class="container" style="margin-top: 50px;">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card border-0 shadow rounded-3 my-5">
                    <div class="card-body p-4 p-sm-5">
                        <h5 class="card-title text-center mb-5 fw-light fs-5">Update Your Expense</h5>
                        <form action="/expenses/api/v1/addExpense" method="post">
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="date">Date:</label>
                                <div class="col-sm-10">
                                    <input type="date" class="form-control mb-3" id="date" name="date"
                                        value="<%= expense.date %>" disabled>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div class="form-group">
                                    <label class="control-label" for="Medical">Medical Expenses(₹):</label>
                                    <div class="col-sm-10">
                                        
                                        <input type="number"  step="0.01" required   class="form-control mb-3" id="Medical" name="Medical"
                                            value="<%= expense.Medical %>" step="any">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label" for="Entertainment">Personal Expenses(₹):</label>
                                    <div class="col-sm-10">
                                        <input type="number"  step="0.01" required   class="form-control mb-3" id="Entertainment"
                                            name="Entertainment" value="<%=expense.Entertainment  %>" step="any">
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div class="form-group">
                                    <label class="control-label" for="Bills">Bill Payments(₹):</label>
                                    <div class="col-sm-10">
                                        <input type="number"  step="0.01" required   class="form-control mb-3" id="Bills" name="Bills"
                                            value="<%=expense.Bills  %>" step="any">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label" for="Groceries">Household Expenses(₹):</label>
                                    <div class="col-sm-10">
                                        <input type="number"  step="0.01" required   class="form-control mb-3" id="Groceries" name="Groceries"
                                            value="<%=expense.Groceries %>" step="any">
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div class="form-group">
                                    <label class="control-label" for="Investment">Investments(₹):</label>
                                    <div class="col-sm-10">
                                        <input type="number"  step="0.01" required   class="form-control mb-3" id="Investment" name="Investment"
                                            value="<%=expense.Investment %>" step="any">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label" for="Gifts">Gift Expenses(₹):</label>
                                    <div class="col-sm-10">
                                        <input type="number"  step="0.01" required   class="form-control mb-3" id="Gifts" name="Gifts"
                                            value="<%=expense.Gifts %>" step="any">
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div class="form-group">
                                    <label class="control-label" for="HugeExpense">Bulk Expenses(₹):</label>
                                    <div class="col-sm-10">
                                        <input type="number"  step="0.01" required   class="form-control mb-3" id="HugeExpense"
                                            name="HugeExpense" value="<%=expense.HugeExpense  %>" step="any">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label" for="Miscellaneous">Miscellaneous Expenses:</label>
                                    <div class="col-sm-10">
                                        <input type="number"  step="0.01" required   class="form-control mb-3" id="Miscellaneous"
                                            name="Miscellaneous" value="<%=expense.Miscellaneous  %>" step="any">
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div class="form-group">
                                    <label class="control-label" for="Remarks">Expense Remarks:</label>
                                    <div class="col-sm-10">
                                        <textarea type="text" class="form-control mb-3" id="Remarks" name="Remarks"
                                            value="<%=expense.Remarks  %>"><%=expense.Remarks %> </textarea>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label" for="Source">Payment Sources:</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control mb-3" id="Source" name="Source"
                                            value="<%=expense.Source  %>">
                                    </div>
                                </div>
                            </div>
                            <div class="d-grid gap-2 d-md-block">

                                <button type="submit" class="btn btn-primary btn-login">Submit</button>
                                <button type="submit" class="btn btn-danger btn-login"
                                    formaction="/expenses/api/v1/delete" method="post">Delete Record</button>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include("footer") -%>